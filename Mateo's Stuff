//takes in cardNum and the hand and returns (error). If true it means it's not gonna work. False is what we want.
bool validateCardNum (string suit, node *hand){
    int lowerBound, upperBound;
    if (suit == "hearts") {
        lowerBound = 1;
        upperBound = 13;
    }
    if (suit == "diamonds") {
        lowerBound = 14;
        upperBound = 27;
    }
    if (suit == "spades") {
        lowerBound = 28;
        upperBound = 40;
    }
    if (suit == "clubs") {
        lowerBound = 40;
        upperBound = 52;
    }
    bool error = true;
    while (hand){
        if (hand->cardNum == cardNum){
            error = false;
        }
        hand = hand ->next;
    }
    if (error == true){
        cout<<"That card is not in your hand. Please enter a new card number\n";
    }
    return error;
}

